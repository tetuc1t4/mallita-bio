body {
  font-family: Arial, sans-serif;
  text-align: center;
  background-color: #f5f5f5;
}

h1 {
  margin-top: 20px;
}

#malla {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin: 20px;
}

.course {
  display: inline-block;
  padding: 15px;
  margin: 10px;
  background: #cce5ff;
  border: 2px solid #007bff;
  border-radius: 8px;
  cursor: pointer;
  min-width: 80px;
  text-align: center;
}

.course:hover {
  background: #b8daff;
}
